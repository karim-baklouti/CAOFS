pipeline {
    agent any
    environment {
        DOCKERHUB = credentials('DOCKER_HUB')  
        APP_NAME = "$DOCKERHUB_USR/fastapi-users"
        BUILD_NUMBER = "1.0.0"
    }
    stages {
       
        stage('SCM Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/karim-baklouti/CAOFS.git'
            }
        }
        stage('Build Docker image') {
            steps {
                sh 'cd CI-CD/src && docker build -t $APP_NAME:$BUILD_NUMBER .'
            }
        }
        stage('Unit Test') {
            agent {
                docker {
                    image "${APP_NAME}:${BUILD_NUMBER}"
                    reuseNode true
                }
            }
            steps {
                sh '''
                    cd CI-CD
                    export PYTHONPATH=$(pwd)
                    python -m pytest tests/test_app.py  --cov=src
                '''
            }
        }
        stage('Login to DockerHub') {
            steps {
                sh 'echo "$DOCKERHUB_PSW" | docker login -u "$DOCKERHUB_USR" --password-stdin'
            }
        }
        stage('Push image') {
            steps {
                sh 'docker push $APP_NAME:$BUILD_NUMBER'
            }
        }
        stage('Deploy to k8s') {
            agent {
                docker {
                    image 'bitnami/kubectl:latest'
                    args '--entrypoint="" --network=host'
                    reuseNode true
                }
            }
            steps {
                withKubeConfig([credentialsId: 'k8s-config']) {
                    sh '''
                        sed -i "s|image: username/fastapi-users:v3|image: ${APP_NAME}:${BUILD_NUMBER}|g" CI-CD/k8s/deployment.yaml
                        cd CI-CD/k8s && kubectl apply -f .
                    '''
                }
            }
        }
    }

}